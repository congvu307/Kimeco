@model Kimeco_ASP.Models.Salary

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="">
    <h4>Salary</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label>Team</label>
        <div class="col-md-10">
            <select name="UserID">
                @{
                    var listUser = ViewData["ListUser"] as List<Kimeco_ASP.Models.User>;
                    foreach (var item in listUser)
                    {
                        <option value="@item.Username" @(item.Username == Model.UserID ? "selected" : "")>@item.FullName</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WorkingTime, htmlAttributes: new { @class = "control-label col-md-2" })
